@model BattaryState.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input readonly="readonly" class="form-control" value="@Model.Email"  />
    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="userFio"></label><br />
        <input class="form-control" asp-for="userFio" />
        <span asp-validation-for="userFio"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="userPriem"></label><br />
        <input class="form-control" asp-for="userPriem" />
        <span asp-validation-for="userPriem"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="userDismiss"></label><br />
        <input class="form-control" asp-for="userDismiss" />
        <span asp-validation-for="userDismiss"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>