@model BattaryState.Models.BatteryInfo

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удаление</h1>

<h3>Удалить данную информацию?</h3>
<div>
    <h4>Информация о батарее</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.partnumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.partnumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.serial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.serial)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">К списку</a>
    </form>
</div>
