@model BattaryState.Models.OpSystem

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Информацию об ОС</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="osName" class="control-label"></label>
                <input asp-for="osName" class="form-control" />
                <span asp-validation-for="osName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" /> |
                <a class="btn btn-primary" asp-action="Index">К списку</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
