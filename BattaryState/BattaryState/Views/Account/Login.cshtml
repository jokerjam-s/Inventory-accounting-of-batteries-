@model BattaryState.ViewModels.LoginViewModel

<h2>Вход в приложение</h2>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label><br />
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="form-group" asp-for="Password"></label><br />
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe"></label><br />
            </div>
            <div>
                <input class="btn btn-success" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>