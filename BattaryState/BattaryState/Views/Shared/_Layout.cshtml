<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Состояние батарей</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="pb-5">
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-app-indicator" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M5.5 2A3.5 3.5 0 0 0 2 5.5v5A3.5 3.5 0 0 0 5.5 14h5a3.5 3.5 0 0 0 3.5-3.5V8a.5.5 0 0 1 1 0v2.5a4.5 4.5 0 0 1-4.5 4.5h-5A4.5 4.5 0 0 1 1 10.5v-5A4.5 4.5 0 0 1 5.5 1H8a.5.5 0 0 1 0 1H5.5z" />
                        <path d="M16 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    </svg>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a id="register_user" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">Оборудование</a>
                                <div class="dropdown-menu" aria-labelledby="register_user">
                                    <a class="nav-link" asp-area="" asp-controller="TerminalInfoes" asp-action="Index">Терминалы</a>
                                    <a class="nav-link" asp-area="" asp-controller="BatteryInfo" asp-action="Index">Батареи</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a id="register_user" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">Справочники</a>
                                <div class="dropdown-menu" aria-labelledby="register_user">
                                    <a class="nav-link" asp-area="" asp-controller="Sklad" asp-action="Index">Склады</a>
                                    <a class="nav-link" asp-area="" asp-controller="OpSystem" asp-action="Index">Операционные системы</a>
                                    <a class="nav-link" asp-area="" asp-controller="ModelTSD" asp-action="Index">Модели ТСД</a>
                                </div>
                            </li>

                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a id="register_user" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">Администрирование</a>
                                <div class="dropdown-menu" aria-labelledby="register_user">
                                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Create">Новый пользователь</a>
                                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
                                    <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Роли пользователей</a>
                                </div>
                            </li>
                        }

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <input type="submit" class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="Logout" value="Выход" />
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="mt-5 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2020 - BattaryState - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
